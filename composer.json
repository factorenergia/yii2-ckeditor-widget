{
    "name": "factorenergia/yii2-ckeditor-widget",
    "description": "CKEditor widget for Yii2.",
    "type": "yii2-extension",
    "keywords": [
        "factorenergia",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "ckeditor"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "yiisoft/yii2": "^2.0",
        "ckeditor/ckeditor": "4.14.0",
        "factorenergia/kcfinder": "3.21.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "factorenergia\\ckeditor\\": "src"
        }
    },
    "config": {
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm"
            }
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
